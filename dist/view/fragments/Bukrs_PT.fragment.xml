<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Table
        id="Bukrs_PT_Table"
        items="{ path: 'bukrs_PT_Model>/', sorter: { path: '{bukrs_PT_Model>bukrs}' } }"
        growing="true"
        growingThreshold="20"
        visible="true"
    >
        <headerToolbar>
            <Title
                id="Bukrs_PT_Title"
                text="{i18n>fragments.bukrs}"
                level="H2"
                wrappingType="Normal"
            />
        </headerToolbar>
        <columns>
            <Column
                id="Bukrs_PT_rCol1"
                width="50%"
                demandPopin="true"
                hAlign="Begin"
            >
                <Text
                    id="Bukrs_PT_rtxt1"
                    text="{bukrs_PT_Model>bukrs}"
                />
            </Column>
            <Column
                id="Bukrs_PT_rCol2"
                width="50%"
            >
                <Text
                    id="Bukrs_PT_txt2"
                    text="{bukrs_PT_Model>butxt}"
                />
            </Column>
        </columns>
    </Table>
</core:FragmentDefinition>
