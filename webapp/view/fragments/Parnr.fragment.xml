<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>

    <Table
        id="parnrTable"
        items="{ path: 'LayoutModel>/ZZ1_CDS_SEARCH_HELP_PARNR', sorter: { path: '{LayoutModel>Parnr' } }"
        growing="true"
        growingThreshold="20"
        visible="true"
    
    >
        <headerToolbar>
            <Title
                id="parnrTitle"
                text="{i18n>fragments.parnr}"
                level="H2"
                wrappingType="Normal"
            />
        </headerToolbar>
        <columns>
            <Column
                id="parnrCol1"
                width="50%"
                demandPopin="true"
                hAlign="Begin"
            >
                <Text
                    id="parnrtxt1"
                    text="{LayoutModel>Parnr}"
                />
            </Column>
            <Column
                id="parnrCol2"
                width="50%"
            >
                <Text
                    id="parnrtxt2"
                    text="{LayoutModel>ParnrDescription}"
                />
            </Column>
        </columns>
    </Table>
</core:FragmentDefinition>
