<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Table
        id="lifnrTable"
        items="{ path: 'LayoutModel>/ZZ1_CDS_SEARCH_HELP_LIFNR', sorter: { path: '{LayoutModel>Lifnr' } }"
        growing="true"
        growingThreshold="20"
        visible="true"
    >
        <headerToolbar>
            <Title
                id="lifnrTitle"
                text="{i18n>fragments.lifnr}"
                level="H2"
                wrappingType="Normal"
            />
        </headerToolbar>
        <columns>
            <Column
                id="lifnrCol1"
                width="50%"
                demandPopin="true"
                hAlign="Begin"
            >
                <Text
                    id="lifnrtxt1"
                    text="{LayoutModel>Lifnr}"
                />
            </Column>
            <Column
                id="lifnrCol2"
                width="50%"
            >
                <Text
                    id="lifnrtxt2"
                    text="{LayoutModel>LifnrName}"
                />
            </Column>
        </columns>
    </Table>
</core:FragmentDefinition>
